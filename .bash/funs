# Begin ~/.bash/funs
# Personal functions

w(){
   dbus-launch \
   ssh-agent \
   \
     sway
}


x(){
   xinit -- \
   "$@" \
   -nolisten tcp \
   -dpi 192 \
   vt${XDG_VTNR}
}

wm (){
  # undone
  _WM="$1"
  shift
  WM="$_WM" x "$@"
}

m () {
  xmms2 clear
  local was_playlist=no
  for pl in *.cue *.Cue
  do
      if [ -f "$pl" ]; then
          was_playlist=yes
          xmms2 addpls "$pl"
      fi
  done
  if [ "$was_playlist" = "no" ]; then
      xmms2 add .
  fi
}

