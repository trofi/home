#!/bin/sh

CFLAGS="${CFLAGS}     -frecord-gcc-switches" \
CXXFLAGS="${CXXFLAGS} -frecord-gcc-switches" \
FFLAGS="${FFLAGS}     -frecord-gcc-switches" \
FCFLAGS="${FCFLAGS}   -frecord-gcc-switches" \
\
LDFLAGS="${LDFLAGS} -Wl,--defsym=__gentoo_check_ldflags__=0" \
\
FEATURES="strict stricter test ${FEATURES}" \
USE="-profile -doc test ${USE}" \
HCFLAGS="$(portageq envvar HCFLAGS) ${HCFLAGS}" \
GITIFY=yes \
PORTAGE_TMPDIR=${PORTAGE_TMPDIR:-/tmp} \
    \
    exec ebuild "$@"
